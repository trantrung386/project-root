<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Shop App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="/js/main.js"></script>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">ShopApp</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <!-- Suppliers menu -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" href="/">Tất cả</a></li>
          <% if (headerSuppliers && headerSuppliers.length) { %>
            <% headerSuppliers.forEach(s => { %>
              <li class="nav-item">
                <a class="nav-link" href="/?supplier=<%= s._id %>"><%= s.name %></a>
              </li>
            <% }) %>
          <% } %>
        </ul>

        <!-- Search -->
        <form class="d-flex" action="/" method="get">
          <input class="form-control me-2" type="search" name="q" placeholder="Tìm sản phẩm...">
          <button class="btn btn-outline-light" type="submit">Tìm</button>
        </form>

        <!-- User info -->
        <ul class="navbar-nav ms-3">
          <% if (currentUser) { %>
            <li class="nav-item">
              <span class="navbar-text me-2">Xin chào, <%= currentUser.username %></span>
            </li>
            <li class="nav-item">
              <form action="/auth/logout" method="POST">
                <button type="submit" class="btn btn-sm btn-danger">Thoát</button>
              </form>
            </li>
          <% } else { %>
            <li class="nav-item"><a class="btn btn-sm btn-success" href="/auth/login">Đăng nhập</a></li>
            <li class="nav-item ms-2"><a class="btn btn-sm btn-primary" href="/auth/register">Đăng ký</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
