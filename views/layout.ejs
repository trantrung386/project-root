<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title><%= title || 'Website CRUD' %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">CRUD Shop</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
          <li class="nav-item"><a class="nav-link" href="/products">Sản phẩm</a></li>
          <li class="nav-item"><a class="nav-link" href="/suppliers">Nhà cung cấp</a></li>

          <% if (session && session.user) { %>
            <li class="nav-item"><span class="nav-link">Xin chào, <%= session.user.username %></span></li>
            <li class="nav-item"><a class="nav-link" href="/auth/logout">Đăng xuất</a></li>
            <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/auth/login">Đăng nhập</a></li>
            <li class="nav-item"><a class="nav-link" href="/auth/register">Đăng ký</a></li>
            <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-3">
    <% if (session && session.success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= session.success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% session.success = null; %>
<% } %>

<% if (session && session.error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= session.error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% session.error = null; %>
<% } %>

  </div>

  <!-- Main content -->
  <main class="container my-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="text-center py-4 bg-light border-top mt-5">
    <p class="mb-0 text-muted">© 2025 CRUD Website | Thiết kế bởi bạn</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
